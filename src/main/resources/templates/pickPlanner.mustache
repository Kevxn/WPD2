<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/pickPlanner">Milestone Planner <i class="fa fa-home" style="color:white;"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <a class="btn btn-outline-danger my-2 my-sm-0" href="/logout">Log Out</a>
        </form>
    </div>
</nav>



<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <br> <br>
        <h1 class="display-4">Planners</h1>
    </div>
</div>

<div class="row">
<div class="container col-md-1">
            <nav class="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">

                        <form method="POST" action="/pickPlanner">
                        <input type="hidden" name="method" value="pick">
                            <button type="submit" value="pick" onclick="return checkButtonChosen()" class="btn btn-primary btn-lg btn-block" style="margin-bottom: 0.5em;">Open Planner</button>


                    </li>
                    <li class="nav-item">
                        <a href = "/createPlanner" role="button" class="btn btn-primary btn-lg bn-block">Create Planner</a>
                    </li>
                    <li class="nav-item">
                        <label id="lblError"></label>
                    </li>
                </ul>
            </nav>

</div>

<div class="container col-md-8">


        {{^plannerList}}
            There are no Planners
        {{/plannerList}}
    <div class="row">
    {{#plannerList}}
    <div class="col-md-4">
        <div class="card card-body bg-light" style="margin-bottom: 1em">
            <h4 style="font-weight: normal;"><input type="radio" name="plannerId" value="{{id}}"> {{plannerName}}</h4>
        </div>
    </div>
    {{/plannerList}}

    </div>
    </div>
    <script>
        function checkButtonChosen(){
            if ($("input[type=radio]:checked").length > 0) {
                $('lblError').hidden = true;
                return true;
            }
            else{
                $('#lblError').text('You must select a planner.');
                return false;
            }
        }

        $(document).ready(function() {
            $('input[type=radio]').change(function() {
                $('#lblError').hidden = true;
            });
        });
    </script>
</div>
</body>
</html>
