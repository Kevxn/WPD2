</form>
</div>
</body>
<script>
    $(document).ready(function(){
        $("#txtSearch").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $(".milestoneCard").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
