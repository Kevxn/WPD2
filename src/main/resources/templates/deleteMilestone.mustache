<form action="/deleteMilestone" method="POST">
    <div class="row">
        {{#milestoneList}}
    <div class ="col-md-4 milestoneCard">
        <div class="card card-body bg-light" style="margin-bottom: 1em">
            <h4 style="font-weight: normal;"><input type="radio" name="msgId" value="{{id}}"> {{title}}</h4>
    </div>
        </div>

{{/milestoneList}}
    </div>

        <input type="hidden" name="method" value="delete">
